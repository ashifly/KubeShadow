{
    "name": "shadow-sidecar",
    "image": "alpine:latest",
    "command": ["/bin/sh"],
    "args": ["-c", "while true; do sleep 30; done"],
    "env": [
        {
            "name": "STEALTH_MODE",
            "value": "true"
        }
    ],
    "ports": [
        {
            "containerPort": 8080,
            "protocol": "TCP"
        }
    ]
} 